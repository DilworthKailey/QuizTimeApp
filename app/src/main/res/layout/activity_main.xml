<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quiztimeapp.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:hint="@string/edit_message"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:onClick="sendMessage"
        android:text="@string/button_send"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:onClick="viewScores"
        android:text="@string/button_send2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="315dp"
        tools:layout_editor_absoluteY="317dp"
        tools:layout_editor_absoluteX="52dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="76dp"
        android:text="Message"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:text="Location:"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/place" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:text="Temperature:"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/temp" />

    <TextView
        android:id="@+id/place"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Place"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/temp"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.925"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp"
        android:text="Temp"
        android:layout_width="119dp"
        android:layout_height="57dp"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="212dp" />

</android.support.constraint.ConstraintLayout>
